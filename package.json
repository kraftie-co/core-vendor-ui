{
  "name": "kraftie",
  "version": "0.1.0",
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "build:dev": "NODE_ENV=development webpack",
    "build:dev:analyze": "yarn build:dev --env addon=bundleanalyze",
    "build:dev:visualize": "yarn build:dev --env addon=bundlevisualizer",
    "build:dev:watch": "yarn build:dev --watch --hot",
    "build": "NODE_ENV=production webpack",
    "build:analyze": "yarn build --env addon=bundleanalyze",
    "build:visualize": "yarn build --env addon=bundlevisualizer",
    "build:watch": "yarn build --watch",
    "lint": "prettier --ignore-path .eslintignore --check \"**/*.{js,jsx,json,css,sass,scss,less,html,md}\" && eslint src",
    "lint:fix": "prettier --ignore-path .eslintignore --write \"**/*.{js,jsx,json,css,sass,scss,less,html,md}\" && eslint src --fix",
    "lint-staged": "lint-staged",
    "serve:dev": "NODE_ENV=development webpack-dev-server --mode development",
    "serve:dev:dashboard": "NODE_ENV=development webpack-dashboard webpack-dev-server -- --mode development --env addon=dashboard",
    "start": "yarn serve:dev",
    "serve": "yarn build && serve -s -C build",
    "test": "jest --runInBand --detectOpenHandles --passWithNoTests",
    "test:watch": "jest -u --runInBand --verbose --watch --detectOpenHandles --passWithNoTests",
    "test:coverage": "jest -u --coverage --verbose --runInBand --detectOpenHandles --passWithNoTests",
    "docker:dev": "yarn docker:dev:build && yarn docker:dev:start",
    "docker:dev:build": "docker build -f docker/web/Dockerfile --target development -t kraftie .",
    "docker:dev:start": "docker run --rm -it --network host -v $PWD:/usr/src/app kraftie",
    "docker:prod": "yarn docker:prod:build && yarn docker:prod:start",
    "docker:prod:build": "docker build -f docker/web/Dockerfile --target production -t kraftie:production .",
    "docker:prod:start": "docker run --rm -it --network host -v $PWD:/usr/src/app kraftie:production"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "yarn lint:fix",
      "git add"
    ],
    "*.{json,css,sass,scss,less,html,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.0",
    "i18next": "^22.0.6",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.3",
    "rebass": "^4.0.7",
    "redux": "^4.2.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.6",
    "web-vitals": "^3.1.0",
    "axios": "^0.24.0"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "autoprefixer": "^10.4.13",
    "chalk": "4.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.2",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^9.0.0",
    "esbuild-loader": "^2.20.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "inject-html-webpack-plugin": "^1.0.1",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "jest-transform-stub": "^2.0.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.7.0",
    "node-sass": "^8.0.0",
    "path": "^0.12.7",
    "postcss-loader": "^7.0.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.3",
    "prettier": "^2.7.1",
    "sass-loader": "^13.2.0",
    "serve": "^14.1.2",
    "sinon": "^14.0.2",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-async-chunk-names-plugin": "^0.1.1",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.0",
    "webpack-dashboard": "^3.3.7",
    "webpack-dev-server": "^4.11.1",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-merge": "^5.8.0",
    "webpack-visualizer-plugin2": "^1.0.0"
  }
}
